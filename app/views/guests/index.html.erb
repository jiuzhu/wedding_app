<div class="page-header">
  <h1>Guests</h1>
</div>

<p><%= link_to 'Add a New Guest', new_guest_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if Array(@guests).each do |guest| %>
      <tr>
        <td><%= guest.first_name %></td>
        <td><%= guest.last_name %></td>
        <td><%= guest.email %></td>
        <td><%= guest.address_1 %></td>
        <td><%= guest.address_2 %></td>
        <td><%= guest.city %></td>
        <td><%= guest.state %></td>
        <td><%= guest.zip %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, guest_url(guest), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_guest_url(guest), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, guest_url(guest), method: 'delete', data: { confirm: "Do you really want to delete this guest?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

