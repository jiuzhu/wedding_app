<div class="page-header">
  <h1>Guest Groups</h1>
</div>

<p><%= link_to 'Add Guest To A Group', new_membership_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Guest</th>
      <th>Group</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Array(@memberships).each do |membership| %>
      <tr>
        <td><%= membership.guest.first_name + ' ' + membership.guest.last_name %></td>
        <td><%= membership.group.name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, membership_url(membership), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_membership_url(membership), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, membership_url(membership), method: 'delete', data: { confirm: "Do you really want to delete this membership?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

