<div class="page-header">
  <h1>Editing Guest Groups #<%= @membership.id %></h1>
</div>

<%= form_tag(membership_url(@membership), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :guest_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :guest_id, @membership.guest.first_name + ' ' + @membership.guest.last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :group_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :group_id, @membership.group.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Membership", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
