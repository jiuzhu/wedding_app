<div class="page-header">
  <h1>New RSVP</h1>
</div>

<%= form_tag(rsvps_url, method: 'post', class: 'form-horizontal') do %>
  
  <div class="form-group">
      <label class="col-md-3 control-label">
        Guest Name
      </label>

      <div class="col-md-6">

          <select id="guest_id" name="guest_id">
            <option value=""></option>
            
            <%= Array(@guests).each do |guest| %>
            <option value="<%= guest.id %>"> <%= guest.first_name + ' ' + guest.last_name %></option>
            <% end %>

          </select>

    </div>
  </div>




  <div class="form-group">
    <%= label_tag :_numguests, 'Will you be attending?', class: 'col-md-3 control-label' %>
    <div class="col-md-6">
          <%= select_tag :num_guests,options_for_select([['Yes!','1'], ['Yes, and I am bringing a guest!','2'], ['Unfortunately, I can not make it.', '0']]) %> 
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :your_food_preference, nil, class: 'col-md-3 control-label' %>
    <div class="col-md-6">
          <%= select_tag :your_food_preference, options_for_select(food_options) %> 
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :guest_food_preference, nil, class: 'col-md-3 control-label' %>
    <div class="col-md-6">
          <%= select_tag :guest_food_preference, options_for_select(food_options) %> 

    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Rsvp", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
